<div id="pergaminhos">					
	<h3>Pergaminhos</h3>
	
	<ul>
		<% 

		for(var i = 0; i < acoes.length; i++) {
			var txt_acao = '';
			var date = new Date();
			var momento_atual = date.getTime();
			switch(parseInt(acoes[i].acao)) {
				case 1:
					txt_acao = ' aldeão(ões) coletando recursos';
					break;
				case 2:
					txt_acao = ' enforcamento(s) programado(s)';
					break;
				case 3:
					txt_acao = ' aldeão(ões) em treinamento de história';
					break;
				case 4:
					txt_acao = ' aldeão(ões) em treinamento de magia';
					break;
			}
			%>
			<li><%=acoes[i].quantidade.toString()%> <%=txt_acao%>. - <small>restam <span class="tempo_restante"><%=Math.round((acoes[i].acao_termina - momento_atual)/1000)%></span> segundos - <a href="/revogar_acao?id_acao=<%=acoes[i]._id.toString()%>">revogar ordem</a></small></li>
		<%
		} 
		%>
	</ul>
</div>